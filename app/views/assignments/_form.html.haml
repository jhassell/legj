= form_for @assignment do |f|
  - if @assignment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@assignment.errors.count, "error")} prohibited this assignment from being saved:"
      %ul
        - @assignment.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :member_id
    = f.number_field :member_id
    - members = options_from_collection_for_select(Member.all, :id, :name)
    = f.select :member, members, {}, required: true

  .field
    = f.label :committee_id
    = f.number_field :committee_id
  %p
    %select{ :member => "question[question_status]" }
      %option{:value => 1}= "label 1"
      %option{:value => 2}= "label 2"
  %p
    options_from_collection_for_select()
  .actions
    = f.submit 'Save'
